<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:formwarectrls="clr-namespace:FAvalonia.favaloniaViews.Controls" 
        x:Class="AvaloniaApplicationOpenFileAsync.MainWindow"
        Title="AvaloniaApplicationOpenFileAsync">

    <DockPanel >
        <formwarectrls:FAvaloniaToolbar Background="Orange" DockPanel.Dock="Top" Name="MainToolbar"></formwarectrls:FAvaloniaToolbar>


        <SplitView Name="SplitView1" IsPaneOpen="true" OpenPaneLength="500" DisplayMode="Inline" PanePlacement="Right" >
            <SplitView.Pane>
                <Border BorderThickness="0" BorderBrush="Black" Name="ToolsColumn" >
                    <StackPanel Name="SplitterTableStack">
                        <Label Name="TransLb">a text that should be translated</Label>
                        <Button Name="TranslateBtn">Click me to translate</Button>
                    </StackPanel>
                </Border>
            </SplitView.Pane>

            
            <Panel Background="AliceBlue" Name="MainGrid">

                <!-- <formware:OpenGLView  Name="glControlItself"></formware:OpenGLView> -->

            </Panel>

        </SplitView>
    </DockPanel>

 
    
    
</Window>
